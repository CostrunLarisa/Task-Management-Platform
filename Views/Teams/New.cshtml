
@{
    ViewBag.Titlu = "New";
}

<h1>@ViewBag.Message</h1>

<h2>Adaugare echipa</h2>

@model Task_Management_Platform.Models.Team

@using (Html.BeginForm(actionName: "New", controllerName: "Teams"))
  {
    @Html.Label("Nume", "Nume echipa")
    <br />
    @Html.TextBox("Nume", null, new { @class = "form-control" })
    @Html.ValidationMessageFor(model => model.Nume, null, new { @class = "text-danger " })
    <br />
    <br />
    <button class="btn btn-sm btn-success" type="submit">Adauga echipa.</button>
}