
@{
    ViewBag.Title = "Edit";
}

<h1>@ViewBag.Message</h1>

<h2>Editare Comentariu</h2>

@model Task_Management_Platform.Models.Comment

<form method="post" action="/Comments/Edit/@Model.CommentId">
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.Hidden("TaskId")

    @Html.Hidden("CommentId")

    @Html.Label("Content", "Continut comentariu")
    <br />
    @Html.Editor("Content")
    <br />
    <br />

    <button type="submit">Modifica comentariul</button>
</form>